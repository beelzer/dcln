---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BackLink from '../../components/BackLink.astro';
import Icon from '../../components/Icon.astro';
import { getCollection, render } from 'astro:content';
import { SITE } from '../../lib/constants';
import { fetchReadmeHtml } from '../../lib/github';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const readmeHtml =
  project.data.readme && project.data.repo ? await fetchReadmeHtml(project.data.repo) : null;
---

<BaseLayout title={`${project.data.title} â€” ${SITE.name}`} description={project.data.description}>
  <article class="project">
    <div class="container container--narrow">
      <header class="project__header">
        <BackLink href="/projects" label="Back to projects" />
        <h1 class="project__title">{project.data.title}</h1>
        <p class="project__desc">{project.data.description}</p>

        <div class="project__meta">
          <div class="project__tags">
            {project.data.tags.map((tag) => <span class="tag">{tag}</span>)}
          </div>
          <div class="project__links">
            {
              project.data.url && (
                <a
                  href={project.data.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="project__link"
                >
                  Live Demo<span class="sr-only"> (opens in new window)</span>
                  <Icon name="arrow-up-right" size={12} />
                </a>
              )
            }
            {
              project.data.repo && (
                <a
                  href={project.data.repo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="project__link"
                >
                  Source Code<span class="sr-only"> (opens in new window)</span>
                  <Icon name="arrow-up-right" size={12} />
                </a>
              )
            }
          </div>
        </div>
      </header>

      <div class="project__content">
        {readmeHtml ? <Fragment set:html={readmeHtml} /> : <Content />}
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .project {
    padding: var(--space-3xl) 0;
  }

  .project__header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--color-border);
  }

  .project__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-sm);
  }

  .project__desc {
    color: var(--color-text-muted);
    font-size: var(--text-lg);
    margin-bottom: var(--space-lg);
  }

  .project__meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
  }

  .project__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .project__links {
    display: flex;
    gap: var(--space-md);
  }

  .project__link {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
  }

  /* Markdown content styles */
  .project__content {
    :global(h2) {
      font-family: var(--font-mono);
      font-size: var(--text-xl);
      margin-top: var(--space-2xl);
      margin-bottom: var(--space-md);
    }

    :global(h3) {
      font-family: var(--font-mono);
      font-size: var(--text-lg);
      margin-top: var(--space-xl);
      margin-bottom: var(--space-sm);
    }

    :global(h4) {
      font-family: var(--font-mono);
      font-size: var(--text-base);
      margin-top: var(--space-xl);
      margin-bottom: var(--space-sm);
    }

    :global(p) {
      color: var(--color-text-muted);
      margin-bottom: var(--space-md);
    }

    :global(strong) {
      color: var(--color-text);
      font-weight: 600;
    }

    :global(a) {
      color: var(--color-accent);
      text-decoration: none;

      &:hover {
        color: var(--color-accent-hover);
      }
    }

    :global(ul),
    :global(ol) {
      color: var(--color-text-muted);
      padding-left: var(--space-xl);
      margin-bottom: var(--space-md);
    }

    :global(li) {
      margin-bottom: var(--space-xs);
    }

    :global(hr) {
      border: none;
      border-top: 1px solid var(--color-border);
      margin: var(--space-2xl) 0;
    }

    :global(blockquote) {
      border-left: 3px solid var(--color-border);
      padding-left: var(--space-lg);
      color: var(--color-text-muted);
      margin-bottom: var(--space-md);
    }

    /* Badge images (inline in paragraphs) */
    :global(p) :global(a) :global(img),
    :global(p) :global(img) {
      display: inline-block;
      vertical-align: middle;
      height: 20px;
    }

    /* Block-level images */
    :global(img) {
      max-width: 100%;
      height: auto;
      border-radius: var(--radius-sm);
    }

    /* Tables */
    :global(table) {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: var(--space-md);
      font-size: var(--text-sm);
    }

    :global(thead) {
      border-bottom: 2px solid var(--color-border);
    }

    :global(th) {
      font-family: var(--font-mono);
      font-weight: 600;
      text-align: left;
      padding: var(--space-sm) var(--space-md);
      color: var(--color-text);
    }

    :global(td) {
      padding: var(--space-sm) var(--space-md);
      color: var(--color-text-muted);
      border-bottom: 1px solid var(--color-border);
    }

    :global(tr):hover {
      background: var(--color-bg-elevated);
    }

    :global(code) {
      font-family: var(--font-mono);
      font-size: 0.9em;
      background: var(--color-bg-elevated);
      padding: 0.15em 0.4em;
      border-radius: var(--radius-sm);
    }

    :global(pre) {
      background: var(--color-bg-elevated);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-md);
      padding: var(--space-lg);
      overflow-x: auto;
      margin-bottom: var(--space-md);

      :global(code) {
        background: none;
        padding: 0;
      }
    }
  }
</style>
