---
export const prerender = false;

import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';
import { SITE } from '../lib/constants';
---

<BaseLayout title={`500 â€” ${SITE.name}`} description="Something went wrong">
  <section class="error">
    <div class="container container--narrow">
      <p class="error__code">500</p>
      <h1 class="error__title">Something went wrong</h1>
      <p class="error__desc">An unexpected error occurred. Please try again later.</p>
      <a href="/" class="error__link">
        <Icon name="arrow-left" size={16} />
        Go home
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .error {
    padding: var(--space-4xl) 0;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(80dvh - 140px);
  }

  .error__code {
    font-family: var(--font-mono);
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-border);
    line-height: 1;
    margin-bottom: var(--space-md);
  }

  .error__title {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-md);
  }

  .error__desc {
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
  }

  .error__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    padding: var(--space-sm) var(--space-xl);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    transition: all var(--duration-normal) var(--ease-out);

    &:hover {
      border-color: var(--color-accent);
      color: var(--color-accent);
    }
  }
</style>
