---
import Icon from './Icon.astro';

const pathname = Astro.url.pathname;

const links = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/private', label: 'Private' },
];
---

<header class="header">
  <nav class="header__nav container" aria-label="Main navigation">
    <a href="/" class="header__logo">
      dcln<span class="header__logo-dot">.</span>me
    </a>

    <input type="checkbox" id="nav-toggle" class="header__toggle-input sr-only" />
    <label for="nav-toggle" class="header__toggle" aria-label="Toggle navigation">
      <span class="header__toggle-bar"></span>
      <span class="header__toggle-bar"></span>
      <span class="header__toggle-bar"></span>
    </label>

    <ul class="header__links">
      {
        links.map(({ href, label }) => {
          const active = pathname === href || (href !== '/' && pathname.startsWith(href));
          return (
            <li>
              <a
                href={href}
                class:list={['header__link', { 'header__link--active': active }]}
                aria-current={active ? 'page' : undefined}
              >
                {label === 'Private' && (
                  <Icon name="lock-closed" size={14} class="header__lock-icon" />
                )}
                {label}
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>
</header>

<script>
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      const toggle = document.getElementById('nav-toggle') as HTMLInputElement | null;
      if (toggle?.checked) {
        toggle.checked = false;
      }
    }
  });
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: var(--z-header);
    background: color-mix(in oklch, var(--color-bg) 85%, transparent);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
  }

  .header__nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
  }

  .header__logo {
    font-family: var(--font-mono);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.02em;

    &:hover {
      color: var(--color-text);
    }
  }

  .header__logo-dot {
    color: var(--color-accent);
  }

  .header__links {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
  }

  .header__link {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) 0;
    position: relative;
    transition: color var(--duration-fast) var(--ease-out);

    &::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 1px;
      background: var(--color-accent);
      transition: width var(--duration-normal) var(--ease-out);
    }

    &:hover {
      color: var(--color-text);

      &::after {
        width: 100%;
      }
    }
  }

  .header__link--active {
    color: var(--color-text);

    &::after {
      width: 100%;
    }
  }

  .header__lock-icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }

  /* Mobile hamburger */
  .header__toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    cursor: pointer;
    padding: var(--space-sm);
  }

  .header__toggle-bar {
    display: block;
    width: 20px;
    height: 2px;
    background: var(--color-text);
    border-radius: 1px;
    transition:
      transform var(--duration-normal) var(--ease-out),
      opacity var(--duration-fast);
  }

  @media (max-width: 640px) {
    .header__toggle {
      display: flex;
    }

    .header__links {
      position: fixed;
      inset: var(--header-height) 0 0 0;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: var(--space-2xl);
      background: var(--color-bg);
      transform: translateY(-100%);
      opacity: 0;
      transition:
        transform var(--duration-normal) var(--ease-out),
        opacity var(--duration-normal) var(--ease-out);
      pointer-events: none;
    }

    .header__link {
      font-size: var(--text-lg);
    }

    .header__toggle-input:checked ~ .header__links {
      transform: translateY(0);
      opacity: 1;
      pointer-events: auto;
    }

    .header__toggle-input:checked ~ .header__toggle {
      .header__toggle-bar:nth-child(1) {
        transform: translateY(6px) rotate(45deg);
      }
      .header__toggle-bar:nth-child(2) {
        opacity: 0;
      }
      .header__toggle-bar:nth-child(3) {
        transform: translateY(-6px) rotate(-45deg);
      }
    }
  }
</style>
